<Page x:Class="MoneyManadger.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManadger"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Grid.Row="1"
       VerticalAlignment="Center"
       HorizontalAlignment="Center">
            <TextBlock Text="Регистрация"
          HorizontalAlignment="Center"
          FontSize="18px"
          Margin="0 0 0 20px"
          Foreground="{StaticResource TextColor}"/>
            <TextBox x:Name="LoginTextBox"
        Width="200px"
        Height="30px"
        Margin="0 0 0 20px"/>
            <TextBox x:Name="EmailTextBox"
        Width="200px"
        Height="30px"
        Margin="0 0 0 20px"/>
            <DatePicker x:Name="DateBox"
        Width="200px"
        Height="30px"
        Margin="0 0 0 20px"/>

            <PasswordBox x:Name="PasswordTextBox"
            Width="200px"
            Height="30px"
            Margin="0 0 0 20px"/>
            <Button Content="Зарегистрироваться"
       Width="Auto"
       Height="40px"
       Margin="0 10px 0 0"
       Cursor="Hand"
       FontSize="16px"
       Background="{StaticResource ElementsColor}"
       Foreground="{StaticResource TextColor}" 
       Click="Registrete_Button_Click"/>
            <TextBlock Text="Вернуться назад"
          HorizontalAlignment="Center"
          Margin="0 10px 0 0"
          Cursor="Hand"
          FontSize="14px"
          Foreground="{StaticResource ElementsColor}" MouseDown="GoBackTextClick"/>

        </StackPanel>
    </Grid>
</Page>
