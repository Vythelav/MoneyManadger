<Window x:Class="MoneyManager.AddIncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить доход" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Категория:"/>
            <TextBox x:Name="CategoryTextBox"/>

            <TextBlock Text="Сумма:" Margin="0,10,0,0"/>
            <TextBox x:Name="AmountTextBox"  InputScope="Number"/>

            <Button Content="Сохранить" Margin="0,10,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
