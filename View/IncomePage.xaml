<Page x:Class="MoneyManadger.IncomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyManadger"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="IncomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Доходы"
            FontSize="48px"
            Margin="30px 0 0 0"
            VerticalAlignment="Center"
            Foreground="{StaticResource TextColor}"/>
        <TextBlock Text="0.0 рублей" 
            Grid.Column="1" 
            Foreground="{StaticResource TextColor}"
            FontSize="64px"
            HorizontalAlignment="Right"
            Margin="0 0 50px 0"
            VerticalAlignment="Center"
            FontWeight="Bold"
 />
        <StackPanel Grid.Row="1">
            <TextBlock Text="Доходы"
            Foreground="{StaticResource TextColor}"
            FontSize="36px"
            HorizontalAlignment="Center"/>
        </StackPanel>
       
        <StackPanel VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <Button
         Content="Выбрать период"
         Width="300px"
         Height="60px"
         Background="{StaticResource ElementsColor}"
     Foreground="{StaticResource TextColor}"
     FontSize="24px"
     HorizontalAlignment="Center"
         FontWeight="Bold"/>
            <Button
     Content="Добавить доходы"
     Width="300px"
     Height="60px"
     Background="{StaticResource SecondColor}"
     Foreground="{StaticResource TextColor}"
     FontSize="24px"
     HorizontalAlignment="Center"
     FontWeight="Bold"
     Margin="0 100px 0 30px"/>
            <Button
     Content="Добавить категорию"
     Width="300px"
     Height="60px"
     Background="{StaticResource SecondColor}"
     Foreground="{StaticResource TextColor}"
     FontSize="24px"
     HorizontalAlignment="Center"
     FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Page>
