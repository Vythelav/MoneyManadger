<Window x:Class="MoneyManadger.AddSpendingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить расход" Height="250" Width="300" Background="{StaticResource PrimaryColor}">
    <Grid Margin="10">
        <Label Content="Сумма:" VerticalAlignment="Top" />
        <TextBox x:Name="AmountTextBox" VerticalAlignment="Top" Margin="0,25,0,0" />

        <Label Content="Категория:" VerticalAlignment="Top" Margin="0,55,0,0" />
        <ComboBox x:Name="CategoryComboBox" VerticalAlignment="Top" Margin="0,80,0,0" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,130,0,0">
            <Button Content="Добавить" Width="75" Background="{StaticResource ElementsColor}" Click="AddButton_Click" />
            <Button Content="Отмена" Width="75" Background="Red" Click="CancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>