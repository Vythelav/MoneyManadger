<Window x:Class="MoneyManadger.NameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите новое имя" Height="200" Width="400" WindowStyle="None" Background="{StaticResource PrimaryColor}" FontFamily="Courier New">
    <Grid>
        <Label Content="Новое имя:" Margin="10,20,10,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="NameTextBox" Margin="10,50,10,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,100,10,0">
            <Button Content="✔" Width="75" HorizontalAlignment="Center"  FontSize="36" Background="{StaticResource ElementsColor}" Click="OkButton_Click"/>
            <Button Content="✖" Width="75" Margin="5,0,0,0" FontSize="26"  Background="Red" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
