<Window x:Class="MoneyManager.AddCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить категорию" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название категории:" Margin="0,0,0,10"/>
            <TextBox x:Name="CategoryNameTextBox" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Width="75" Margin="0,0,10,0" Click="CancelButton_Click"/>
                <Button Content="Добавить" Width="75" Click="AddButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>