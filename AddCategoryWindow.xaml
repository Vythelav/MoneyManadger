<Window x:Class="MoneyManager.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить категорию" Height="150" Width="300" Background="{StaticResource PrimaryColor}">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название категории:"/>
            <TextBox x:Name="CategoryNameTextBox"/>
            <Button Content="Сохранить" Margin="0,10,0,0" Background="{StaticResource ElementsColor }" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
